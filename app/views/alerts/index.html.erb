<%- model_class = Alert -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped  table-responsive table-hover ">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:coin_to_watch) %></th>
      <th><%= model_class.human_attribute_name(:alert_type) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:price_above) %></th>
      <th><%= model_class.human_attribute_name(:price_below) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= link_to alert.id, alert_path(alert) %></td>
        <td><%= alert.coin_to_watch %></td>
        <td><%= alert.alert_type %></td>
        <td><%= alert.email %></td>
        <td><%= alert.phone_number %></td>
        <td><%= alert.price_above %></td>
        <td><%= alert.price_below %></td>
        <td><%= alert.active %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      alert_path(alert), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_alert_path(alert), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      alert_path(alert),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_alert_path,
            :class => 'btn btn-primary' %>
